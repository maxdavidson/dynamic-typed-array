{
  "name": "dynamic-typed-array",
  "version": "0.1.2",
  "description": "Dynamically growing typed arrays",
  "author": "Max Davidson <davidsonmax@gmail.com>",
  "engines": {
    "node": ">=0.10",
    "iojs": ">=1.0.0",
    "npm": ">=3.0.0"
  },
  "main": "dist/dynamic-typed-array.js",
  "jsnext:main": "dist/dynamic-typed-array.es.js",
  "typescript": {
    "main": "src/index.ts",
    "definition": "dist/dynamic-typed-array.d.ts"
  },
  "typings": "dist/dynamic-typed-array.d.ts",
  "scripts": {
    "test": "npm run build && npm run test:quick",
    "test:coverage": "npm run build && npm run test:quick-coverage",
    "test:quick": "mocha",
    "test:quick-coverage": "istanbul cover _mocha --report lcov",
    "prepublish": "npm run build",
    "build": "rimraf dist dist-es2015 && npm run build:es2015 && npm run build:dts && npm run build:umd && npm run build:fix-sourcemaps && npm run build:minify",
    "build:es2015": "tsc",
    "build:dts": "dts-bundle --name dynamic-typed-array --main dist-es2015/index.d.ts --out ../dist/dynamic-typed-array.d.ts",
    "build:umd": "rollup -c rollup.config.js",
    "build:fix-sourcemaps": "sorcery -i dist/dynamic-typed-array.js",
    "build:minify": "cd dist && uglifyjs dynamic-typed-array.js --in-source-map dynamic-typed-array.js.map --compress --mangle --mangle-props --mangle-regex='/^_/' --screw-ie8 --source-map dynamic-typed-array.min.js.map --output dynamic-typed-array.min.js",
    "preversion": "npm test",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maxdavidson/dynamic-typed-array.git"
  },
  "files": [
    "dist",
    "dist-es2015",
    "src"
  ],
  "keywords": [
    "dynamic",
    "growable",
    "resizable",
    "typed-array",
    "vector",
    "arraylist"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015-rollup": "^1.1.1",
    "coveralls": "^2.11.6",
    "dts-bundle": "0.4.2",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "^2.3.4",
    "rimraf": "^2.5.0",
    "rollup": "^0.32.0",
    "rollup-plugin-babel": "^2.3.9",
    "sorcery": "^0.9.2",
    "typescript": "^1.8.10",
    "uglify-js": "^2.6.1"
  }
}
